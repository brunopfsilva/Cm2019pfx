<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="189dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/idcardhospital"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:horizontalSpacing="3dp"
        android:scrollbars="vertical"
        android:paddingBottom="3dp"
        card_view:cardBackgroundColor="@color/grey_300"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:id="@+id/idcardrelative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:padding="6dp">


            <TextView
                android:id="@+id/tztnomeHosp"
                android:textColor="@color/md_dialog_black_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txtdescription"
                android:textColor="@color/md_dialog_black_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="-"
                android:textAlignment="center" />


            <TextView
                android:textColor="@color/md_dialog_black_light"
                android:id="@+id/txtDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="89dp"
                android:text="-"
                android:textAlignment="center" />


            <TextView
                android:textColor="@color/md_dialog_black_light"
                android:id="@+id/txtproximidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDistrict"
                android:layout_marginTop="8dp"
                android:text="Kilometros: "
                 />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>